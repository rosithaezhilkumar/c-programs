#include <stdio.h>
 
float num(int num1, int num2);
 
int main()
{
    float h,b;
    printf("enter the height of the triangle");
    scanf("%d",&h);
    printf("enter the base of the triangle");
    scanf("%d",&b);
    float area;

    area = num(h, b);
 
    printf( "area value is : %f\n", area );
 

    return 0;
}
float num(int num1, int num2)
{
    float area=0.5*num1*num2;
    return area;
}
