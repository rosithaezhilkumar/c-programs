#include <stdio.h>
 
struct triangle
{
    float height;
    float base;
};
 
int main()
{
    float h,b;
    printf("enter the height of the triangle");
    scanf("%d",&h);
    printf("enter the base of the triangle");
    scanf("%d",&b);
    float area;

    area = triangle(h, b);
 
    printf( "area value is : %f\n", area );
 

    return 0;
}
float areaf(struct triangle t)
{
    float area=0.5*t.height*t.base;
    return area;
}
